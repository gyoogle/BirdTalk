extends layout

block content
  .timeline
    .followings.half.back
      h2 팔로잉 목록
      if user.Followings
        for following in user.Followings
          div= following.nick
      br
    .followers.half.back
      h2 팔로워 목록
      if user.Followers
        for follower in user.Followers
          div= follower.nick
      br
  hr
  h3 프로필 수정
  form#profile-form(method='post', action='/user/profile')
    input(name='nick')
    button 닉네임 수정
  br
  .center
    a(href='/') 메인으로